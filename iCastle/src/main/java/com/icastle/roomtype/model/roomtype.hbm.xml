<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.icastle.roomtype.model.RoomTypeVO" table="RoomType" >
        
        <id name="roomTypeId" column="roomTypeId">
            <generator class="identity"/>
        </id>
        
        <property name="hotelId" column="hotelId" />
        <property name="roomTypeName" column="roomTypeName" />
        <property name="peopleNum" column="peopleNum" />
        <property name="roomNumber" column="roomNumber" />
        <property name="weekdaysPrice" column="weekdaysPrice" />
        <property name="holidayPrice" column="holidayPrice" />
        <property name="seasonPrice" column="seasonPrice" />
        <property name="customizedPrice" column="customizedPrice" />
        <property name="customizedName" column="customizedName" />
        <property name="breakfast" column="breakfast" />
        <property name="afternoonTea" column="afternoonTea" />
        <property name="dinner" column="dinner" />
        <property name="bedAddable" column="bedAddable" />
        <property name="pricePerPerson" column="pricePerPerson" />
        <property name="remark" column="remark" />
        <property name="deleteStatus" column="deleteStatus" />
        
    </class>
</hibernate-mapping>

