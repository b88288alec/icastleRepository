<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 設定與table對應的VO -->
	<class name="com.icastle.hotels.model.HotelVO" table="Hotels">

		<!-- 設定主鍵 -->
		<id name="hotelId" column="hotelId">
			<generator class="identity" />
		</id>

		<!-- 變數與欄位的對應關係 -->
		<property name="hotelName" column="dname" />
		<property name="email" column="dname" />
		<property name="pw" column="dname" />
		<property name="addr" column="dname" />
		<property name="zone" column="dname" />
		<property name="point" column="dname" />
		<property name="hot" column="dname" />
		<property name="star" column="dname" />
		<property name="hotelState" column="dname" />
		<property name="registerId" column="dname" />

		<!-- 一對多的關聯，變數emps型態為EmpVO，對應到emp2的deptno欄位，排序根據table的欄位名稱 -->
		<set name="rooms" table="Rooms" lazy="true" order-by="roomId asc">
			<key>
				<column name="hotelId" />
			</key>
			<one-to-many class="com.icastle.rooms.model.RoomsVO" />
		</set>
	</class>
</hibernate-mapping>
